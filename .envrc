#!/usr/bin/env bash
# direnv environment for Claude Manager

# Ensure Bun (if installed via installer) is on PATH
export PATH="$HOME/.bun/bin:$PATH"

# Ensure local bin is on PATH for cm command
export PATH="$HOME/.local/bin:$PATH"

# Load project hooks (Python venv, PYTHONPATH, etc.)
if [ -f .hookrc ]; then
  # shellcheck disable=SC1091
  source .hookrc
fi

# Claude Manager specific environment
export CLAUDE_MANAGER_ROOT="/Users/tryk/nabia/claude-manager"
export CLAUDE_DIR="$HOME/.claude"
export CLAUDE_BACKUP_STRATEGY="file"
export CLAUDE_INTERACTIVE="true"
export CLAUDE_DRY_RUN="false"

echo "direnv: loaded .envrc (Claude Manager)"